{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build/client"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "outputDirectory": "build/client",
  "rewrites": [
    {
      "source": "/((?:.*))",
      "destination": "/client/"
    }
  ]
}
